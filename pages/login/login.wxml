<!--pages/login/login.wxml-->
<go-back title="{{title}}" position="{{position}}"/>
<view class="login" style="top: {{position.top+34}}px">
  <image src="/images/logo/logo.png" mode="widthFix" class="logo"></image>
  <view class="form">
    <van-cell-group>
      <van-field
        value="{{ iphone }}"
        placeholder="请输入用户名"
        border="{{ false }}"
        bind:change="onChangeIphone"
      />
      <van-field
        value="{{ password }}"
        type="password"
        placeholder="请输入密码"
        border="{{ false }}"
        bind:change="onChangePassword"
      />
    </van-cell-group>
    <van-checkbox 
      value="{{ checked }}"
      bind:change="onChangeCheck"
      icon-size="16px"
      checked-color="rgb(72,153,243)">记住密码</van-checkbox>
    <van-button type="default" class="submit" bindtap="login">登录</van-button>
    <view class="bottom-info">
      <view class="goFindPassword">忘记密码</view>
      <view class="goRegister">没有账号?去注册</view>
    </view>
  </view>
</view>
