/* pages/mine/mine.wxss */
.mine {
  position: relative;
  background: rgb(246,246,246);
  min-height: 100vh;
}

.user-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  background: rgb(245,245,245);
}

.user-img image {
  width: 100%;
  height: 100%;
}

.user-info {
  position: relative;
  width: 100%;
  min-height: 300rpx;
  background: linear-gradient(to bottom, rgb(240,240,240) , rgb(255,255,255));
}

.user-login {
  margin: 0 30rpx;
  padding-top: 240rpx;
  display: flex;
  align-items: center;
  padding-bottom: 50rpx;
}

.user-action {
  margin-left: 40rpx;
}

.user-name {
  font-size: 26rpx;
  margin-top: 20rpx;
  color: rgb(85,85,85);
}

.user-action span {
  font-size: 42rpx;
  font-weight: bold;
  color: rgb(85,85,85);
  letter-spacing: 2rpx;
}

.user-login .arrow-right-box {
  display: flex;
  flex: 1;
  height: 150rpx;
  text-align: right;
  align-items: center;
}

.user-login .arrow-right {
  margin-left: auto;
  width: 40rpx;
}

.user-statistics {
  display: flex;
  flex-direction: row;
  padding-bottom: 40rpx;
}

.user-statistics .item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: rgb(125,125,125);
}

.user-statistics .item .num {
  font-size: 32rpx;
  margin-bottom: 6rpx;
}

.action-list {
  background: #FFF;
  margin-top: 20rpx;
  box-shadow: 0 5rpx 8rpx rgba(150,150,150,0.2);
}

.action-item {
  margin: 0 40rpx;
  display: flex;
  align-items: center;
}

.action-item .icon {
  width: 46rpx;
  height: 46rpx;
  position: relative;
  border-radius: 12rpx;
  text-align: center;
}

.action-item .icon image {
  width: 34rpx;
  position: relative;
  top: 6rpx;
}

.item-text {
  display: flex;
  flex: 1;
  padding: 40rpx 0;
  margin-left: 30rpx;
}

.item-text .name {
  font-size: 28rpx;
  font-weight: bold;
  color: rgb(51,51,51);
  letter-spacing: 2rpx;
}

.action-list .action-item+.action-item .item-text {
  border-top: 2rpx solid rgb(220,220,220);
}

.article-num {
  font-size: 28rpx;
  color: rgb(150,150,150);
  display: flex;
  margin-left: auto;
}

.article-num image {
  width: 40rpx;
}