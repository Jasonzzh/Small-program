/* pages/setup/setup.wxss */
.setup {
  position: relative;
}

.container {
  margin: 100rpx 10rpx 0;
  position: relative;
}

.box-top {
  box-shadow: 0 0 10rpx rgba(0,0,0,0.1);
  color: rgb(85,85,85);
}

.share {
  width: 100%;
  height: 90rpx;
  background: #FFF;
  font-size: 28rpx;
  text-align: left;
  line-height: 90rpx;
  text-indent: 30rpx;
  letter-spacing: 2rpx;
  border-bottom: 1px solid rgb(210,210,210);
  display: flex;
  align-items: center;
}

button.share {
  padding: 0;
  border-radius: 0;
  color: rgb(85,85,85);
}

button.share::after {
  border: none;
}

.box-top image {
  width: 40rpx;
  margin-left: auto;
  margin-right: 20rpx;
}

.about-me {
  width: 100%;
  height: 90rpx;
  background: #FFF;
  font-size: 28rpx;
  text-align: left;
  line-height: 90rpx;
  text-indent: 30rpx;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
}

.login-out {
  width: 100%;
  height: 90rpx;
  background: #FFF;
  font-size: 28rpx;
  text-align: left;
  line-height: 90rpx;
  text-indent: 30rpx;
  letter-spacing: 2rpx;
  color: rgb(183,38,31);
  margin-top: 20rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.1);
}
